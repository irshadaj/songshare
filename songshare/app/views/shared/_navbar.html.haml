%nav.navbar.navbar-default.navbar-fixed-top#page-navbar
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ type: :button, data: { toggle: :collapse, target: '#page-navbar-collapse' }, aria: { expanded: :false }}
        %span.sr-only Toggle navigation
        - 3.times do
          %span.icon-bar
      = link_to image_tag('/songshare_logo.png', :height => 100, :width => 800), root_path

    .collapse.navbar-collapse#page-navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          - if user_signed_in?
            = link_to(destroy_user_session_path, class: :sign_out) do
              %img.img-responsive{:src => "/logout.jpg", :height => 100, :width => 100}
          - else
            = link_to(user_spotify_omniauth_authorize_path, class: :sign_in) do
              %img.img-responsive{:src => "/login.jpg", :height => 100, :width => 100}
      - if user_signed_in?
        %center
          = render partial: 'shared/search_navbar'

